<!-- Section 3: Subcategory Details Section -->
<section class="subcategory-details-section py-5">
  <div class="container">
    <div class="row mb-5">
      <div class="col-12 text-center">
        <h2 class="section-title">Explore Our <%= @category.name %> Collection</h2>
      </div>
    </div>
    
    <div class="row">
      <div class="col-12">
        <% if @subcategories.any? %>
          <% @subcategories.each do |subcategory| %>
            <div class="subcategory-detail-box mb-4">
              <div class="row align-items-center">
                <!-- Left side: Content (50%) -->
                <div class="col-12 col-md-6">
                  <div class="subcategory-content">
                    <h3 class="subcategory-name"><%= subcategory.name %></h3>
                    <p class="subcategory-description">
                      High-quality <%= subcategory.name.downcase %> designed for performance and durability. 
                      Perfect for enhancing your motorcycle's functionality and style. 
                      Choose from our premium selection of parts.
                    </p>
                    <div class="subcategory-action">
                      <%= link_to "SHOP NOW", category_path(name: subcategory.name), class: "btn btn-subcategory-shop" %>
                    </div>
                  </div>
                </div>
                
                <!-- Right side: Image (50%) -->
                <div class="col-12 col-md-6">
                  <div class="subcategory-image">
                    <img src="https://images.unsplash.com/photo-1558618047-3c8c76ca7d13?w=600&h=400&fit=crop&crop=center" 
                         alt="<%= subcategory.name %>" 
                         class="img-fluid" />
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="text-center py-5">
            <p class="text-muted">No subcategories available for detailed view.</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>



