<% content_for(:title, "#{@category.name} - REC PARTS") %>

<div class="container py-5">
  <!-- Breadcrumb Navigation -->
  <nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
      <%= link_to "Home", root_path, class: "breadcrumb-item text-decoration-none" %>
      <% @breadcrumb_path.each_with_index do |category, index| %>
        <% if index == @breadcrumb_path.length - 1 %>
          <li class="breadcrumb-item active" aria-current="page"><%= category.name %></li>
        <% else %>
          <%= link_to category.name, category_path(name: category.name), class: "breadcrumb-item text-decoration-none" %>
        <% end %>
      <% end %>
    </ol>
  </nav>

  <div class="row">
    <div class="col-12">
      <h1 class="display-5 fw-bold text-dark mb-1"><%= @category.name %></h1>
      <% if @subcategories.any? %>
        <p class="text-muted mb-5">Choose a subcategory to explore our products</p>
      <% else %>
        <p class="text-muted mb-5">Products coming soon...</p>
      <% end %>
    </div>
  </div>

  <% if @subcategories.any? %>
    <div class="row g-4">
      <% @subcategories.each do |subcategory| %>
        <div class="col-lg-3 col-md-6 col-sm-12">
          <%= link_to category_path(name: subcategory.name), class: "text-decoration-none" do %>
            <div class="card h-100 shadow-sm border-0 category-card">
              <div class="card-body text-center p-4">
                <!-- Subcategory Image Placeholder -->
                <div class="category-image-container mb-3">
                  <div class="category-image-placeholder bg-light d-flex align-items-center justify-content-center">
                    <i class="fas fa-wrench fa-3x text-muted"></i>
                  </div>
                </div>
                
                <!-- Subcategory Name -->
                <div class="category-name-container">
                  <h5 class="card-title fw-bold text-uppercase text-dark mb-2">
                    <%= subcategory.name %>
                  </h5>
                  <div class="category-arrow">
                    <i class="fas fa-arrow-right text-primary"></i>
                  </div>
                </div>
              </div>
              
              <!-- Red bottom border -->
              <div class="category-border"></div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="row">
      <div class="col-12">
        <div class="alert alert-info text-center p-5">
          <i class="fas fa-info-circle fa-3x mb-3 text-info"></i>
          <h4>No subcategories available</h4>
          <p class="mb-3">This category doesn't have any subcategories yet.</p>
          <%= link_to "← Back to Categories", root_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<style>
.category-card {
  transition: transform 0.2s ease-in-out;
  border-radius: 8px;
  overflow: hidden;
}

.category-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
}

.category-image-placeholder {
  height: 200px;
  border-radius: 6px;
  background-color: #f8f9fa;
}

.category-name-container {
  border-top: 1px solid #eee;
  padding-top: 15px;
}

.category-border {
  height: 3px;
  background: linear-gradient(90deg, #e74c3c 0%, #c0392b 100%);
}

.category-arrow {
  margin-top: 10px;
}

.card-title {
  font-size: 0.9rem;
  letter-spacing: 0.5px;
  line-height: 1.3;
  min-height: 2.6rem;
  display: flex;
  align-items: center;
  justify-content: center;
}

.breadcrumb-item + .breadcrumb-item::before {
  content: "›";
  color: #6c757d;
  font-weight: bold;
}
</style>