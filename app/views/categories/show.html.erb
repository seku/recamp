<% content_for(:title, "#{@category.name} - REC PARTS") %>

<!-- Section 1: Hero Section -->
<section class="category-hero-section position-relative">
  <% hero_image_url = category_hero_image_url(@category) %>
  <% if hero_image_url %>
    <div class="category-hero-background" style="background-image: url('<%= hero_image_url %>')"></div>
  <% else %>
    <div class="category-hero-background"></div>
  <% end %>
  <div class="category-hero-overlay"></div>
  <div class="container-fluid h-100 position-relative">
    <div class="row h-100">
      <div class="col-12 d-flex flex-column justify-content-center align-items-center text-center">
        <!-- Category Name in Red Rectangle (30% from top) -->
        <div class="category-name-badge position-absolute">
          <h1 class="category-hero-title sculpin-font"><%= @category.name %></h1>
        </div>

        <!-- Shop Now Button (Center) -->
        <div class="category-hero-button">
          <%= link_to "SHOP NOW", root_path, class: "btn btn-shop-now" %>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Section 2: Flex Grid Content Section -->
<section class="category-content-section py-5">
  <div class="container">
    <div class="content-grid" data-controller="content-toggle">

      <% @category.benefits.each_with_index do |benefit, index| %>
        <!-- Content Item <%= index + 1 %> -->
        <div class="content-item" data-content-toggle-target="item">
          <h4 class="content-title"><%= benefit['title'] %></h4>
          <div class="content-toggle" data-action="click->content-toggle#toggle">
            <span class="plus-icon">+</span>
          </div>
          <div class="red-line"></div>
          <div class="collapse">
            <div class="content-expanded">
              <p><%= benefit['desc'] %></p>
            </div>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</section>

<!-- Section 3: Subcategory Details Section -->
<section class="subcategory-details-section py-5">
  <div class="container">
    <div class="row mb-5">
      <div class="col-12 text-center">
        <h2 class="section-title">Explore Our <%= @category.name %> Collection</h2>
      </div>
    </div>

    <div class="row">
      <div class="col-12">
        <% if @subcategories.any? %>
          <% @subcategories.each do |subcategory| %>
            <div class="subcategory-detail-box mb-4">
              <div class="row align-items-center">
                <div class="col-12 col-md-4">
                  <div class="subcategory-content">
                    <h3 class="subcategory-name"><%= subcategory.name %></h3>
                    <p class="subcategory-description">
                      <%= subcategory.description.present? ? subcategory.description : "High-quality #{subcategory.name.downcase} designed for performance and durability." %>
                    </p>
                    <div class="subcategory-action">
                      <%= link_to "SHOP NOW", category_path(name: subcategory.name), class: "btn btn-subcategory-shop" %>
                    </div>
                  </div>
                </div>
                <div class="col-12 col-md-8">
                  <div class="subcategory-image position-relative" style="height: 300px;">
                    <% subcategory_image_url = subcategory_image_url(subcategory) %>
                    <% if subcategory_image_url %>
                      <img src="<%= subcategory_image_url %>"
                           alt="<%= subcategory.name %>"
                           class="img-fluid w-100 h-100"
                           style="object-fit: cover;">
                    <% else %>
                      <div class="subcategory-image-placeholder bg-light d-flex align-items-center justify-content-center w-100 h-100">
                        <i class="fas fa-cog fa-3x text-muted"></i>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="text-center py-5">
            <p class="text-muted">No subcategories available for detailed view.</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
